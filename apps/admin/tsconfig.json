{
	"extends": "@tiny/typescript-config/nextjs.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"strictNullChecks": false,
		"paths": {
			"@/*": ["./src/*"],
			"@/components/*": ["./src/components/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/lib/*": ["./src/lib/*"],
			"@/types/*": ["./src/types/*"]
		}
	},
	"include": ["next-env.d.ts", "next.config.js", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
